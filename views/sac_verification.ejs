<%- include('partials/header') %>
<h1 class="display-4">SAC Verification</h1>
<form style ="text-align:center" action="/sac_verification" method="post">
  <input type="text" name="id"/>
    <button type="submit"><i class="fas fa-search"></i></button>
</form>
<% if (locals.data) { %>
  <div  style ="text-align:center">
    <h3>From : <%= data.from %></h3>
    <h3>Purpose : <%= data.purpose %></h3>
    <h3>Roll Number :  <%= data.rollno %></h3>
    <h3>Date of Submission :  <%= data.date.getDate()%>/<%=data.date.getMonth()+1 %>/<%=data.date.getFullYear()%></h3>
    <h3>Description :  <%= data.description %></h3>
    <h3>FAC status : <%= data.key.FAC %></h3>
    <p><a href = "/files/<%= data.source.filename %>" target = "_blank"><%= data.source.filename %></a></p>
    <form action="/sac_update" method="post">
      <div class="btn-block">
        <button type="submit">Verify</button>
      </div>
    </form>
    <form action="/sac_decline" method="post">
      <div class="btn-block">
        <button type="submit">Decline</button>
      </div>
    </form>
  </div>
<% } %>
<script type="text/javascript">
    let addRequestBtn = document.getElementById('add-request-btn');
    addRequestBtn.style.opacity = 0;
    addRequestBtn.href="";
    addRequestBtn.title="";
</script>
